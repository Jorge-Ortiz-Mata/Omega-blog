<h1>Show Article</h1>

<div>
  <h3> <%= @article.name %> </h3>
  <div>
    <% @article.categories.each do |category| %>
      <span>
        <%= category.name %> <br>
      </span>
    <% end %>
  </div>
  <div>
    <%= @article.description %>
  </div>
  <div>
    <%= image_tag(@article.avatar, width: "400", height: "200") if @article.avatar.attached? %>
  </div>
  <div>
    <%= @article.body %>
  </div>

  <div>
    <%= link_to 'Edit article', article_edit_path(@article) %>
    <%= button_to 'Delete article', article_destroy_path(@article), method: :delete %>
  </div>
</div>
