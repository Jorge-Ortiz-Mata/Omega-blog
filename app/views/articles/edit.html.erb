<h2>Edit Article</h2>

<div>
  <%= form_with(model: @article) do |form| %>
    <div>
      <%= form.label :name, 'Insert name: ' %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :description, 'Insert desciption: ' %>
      <%= form.text_field :description %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
