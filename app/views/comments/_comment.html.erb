<div id="<%= dom_id comment %>" class="border-2 border-gray-200 flex p-3 my-2 justify-between items-center rounded-lg">

  <div class="flex flex-col">
    <span class="font-semibold text-sm"><%= comment.text %></span>
    <span class="font-semibold text-xs"><%= comment.user.email %></span>
  </div>

  <div>
    <%= button_to 'Delete comment', comment_path(comment), class:"btn-primary bg-red-800",
            method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } } %>
  </div>

</div>
