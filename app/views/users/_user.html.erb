<div class="my-10 p-10 border-2 border-green-200 flex flex-col rounded-lg">
    <span class="font-bold text-2xl">
        <%= profile.name %>
    </span>

    <span class="font-bold text-xs">
        <%= profile.user.email %> <br>
    </span>

    <span class="font-semibold">
        <%= profile.country %>
    </span>

    <div class="my-3">
        <%= link_to 'See user', profile_path(profile), class:"btn-primary bg-green-900" %>
    </div>
</div>
